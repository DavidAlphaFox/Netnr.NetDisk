{
  /* 说明：
           路径配置，可指定物理路径 或 ~ 项目相对路径
  */

  "path": {
    //首页
    "index": "/index.html",
    //存储物理根路径
    "root": "~/NETDISK/"
  },
  //安全
  "safe": {
    //是否匿名模式，默认用户模式
    //匿名：匿名为公共文件夹，任何人可任意操作，无权限控制
    //用户：每个用户独立存在
    "anonymous": true
  },
  //数据库连接字符串，分先后顺序取一项，注释：下划线 _
  "conn": {
    "_mysql": "server=192.168.3.177;uid=root;pwd=123;database=netdisk;",
    "sqlite": "Data Source=~/netdisk.db",
    "sqlserver": "server=192.168.3.177;uid=sa;pwd=123;database=netdisk;",
    "postgresql": "Host=192.168.3.177;Username=postgres;Password=123;Database=netdisk;"
  },
  //日志
  "logs": {
    //路径
    "path": "~/logs/logs.db",
    //分批写入量，满足任意一项触发
    "batchwritecount": 10000,
    //分批写入时间（秒），满足任意一项触发
    "batchwritetime": 60
  }
}
